<%- include('partials/header') %>

<section class="section-padding" style="min-height: 60vh; display: flex; align-items: center;">
  <div class="container text-center">
    <i class="bi bi-exclamation-triangle" style="font-size: 4rem; color: var(--danger);"></i>
    <h3 class="mt-3">Something Went Wrong</h3>
    <p class="text-muted mb-4">We encountered an unexpected error. Please try again later.</p>
    <% if (typeof error !== 'undefined' && error.message) { %>
      <div class="alert alert-danger d-inline-block"><%= error.message %></div>
    <% } %>
    <div class="mt-3">
      <a href="/" class="btn btn-primary"><i class="bi bi-house me-2"></i>Go Home</a>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
